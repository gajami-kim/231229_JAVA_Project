	}

	@Override
	public void removeBoard(Scanner sc) {
		
	}

	@Override
	public void printBoard() {
		//toString 이용
		for(Board tmp : list) {
			System.out.println(tmp.getNum());
			System.out.println(tmp.getTitle());
			System.out.println(tmp.getContent());
			System.out.println(tmp.getUser());
			System.out.println(tmp.getRegisterDate());
		}
		
	}

	@Override
	public void printMenu() {
		System.out.println("         ---menu---");
